generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// 카테고리
model Category {
  id       String    @id @default(cuid())
  name     String    @unique // 영문 (editorial, portrait, commercial, art)
  nameKr   String    // 한국어 (에디토리얼, 포트레이트, 커머셜, 아트)
  projects Project[]
}

// 프로젝트/작업물
model Project {
  id          String         @id @default(cuid())
  title       String
  titleKr     String         // 한국어 제목
  category    Category       @relation(fields: [categoryId], references: [id])
  categoryId  String
  year        String         // 연도 (문자열로 변경)
  client      String?        // 클라이언트 (New)
  service     String?        // 제공 서비스 (New)
  description String?        @db.Text
  mainImage   String?        // 메인 이미지 URL (New)
  images      ProjectImage[]
  featured    Boolean        @default(false)
  order       Int            @default(0)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

// 프로젝트 이미지
model ProjectImage {
  id          String  @id @default(cuid())
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String
  url         String
  alt         String?
  isThumbnail Boolean @default(false)
  order       Int     @default(0)
}

// 저널/블로그
model Journal {
  id        String   @id @default(cuid())
  title     String
  excerpt   String   @db.Text
  content   String   @db.Text
  imageUrl  String
  date      String?  // 표시 날짜 (New)
  tags      String[] // 태그 (Postgres array) (New)
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 사이트 설정
model SiteSettings {
  id           String @id @default("main")
  siteName     String @default("VANTAGE")
  tagline      String @default("감성을 담는 비주얼 아티스트")
  heroSubtitle String @default("비주얼 아티스트 & 포토그래퍼")
  heroVideoUrl String?
  aboutImageUrl String?
  aboutText    String? @db.Text
  experience   Int    @default(10)
  projectCount Int    @default(150)
  brandCount   Int    @default(50)
  awardCount   Int    @default(12)
  email        String @default("hello@vantage.kr")
  instagram    String?
  behance      String?
  artstation   String?
  linkedin     String?
}

// 문의 메시지
model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

// 관리자 계정 (NextAuth)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("user") // admin, user
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
